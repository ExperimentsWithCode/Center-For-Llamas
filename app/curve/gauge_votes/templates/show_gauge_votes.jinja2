{% block content %}
  {% include "navigation.jinja2" %}

    <div class="row">
      <h1>{{ title }}</h1>
    </div>
    <div class="row">

        <div class="card border-info mb-3", style="max-width: 50%;" >
          <div class="card-header">Voter Address</div>
          <div class="card-body">
              <h4 class="card-title">{{user}}</h4>
              {# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> #}
              {# <div id="chart" class="chart"></div> #}
            <a href="{{ url_for('locker_bp.show', provider= user) }}">
              <button type="button" class="btn btn-primary">View Locks</button>
            </a>
          </div>
        </div>


        <div class="card border-warning mb-3", style="max-width: 50%;" >
          <div class="card-header">Known As</div>
          <div class="card-body">
              <h4 class="card-title">{{votes.iloc[0]['known_as']}}</h4>

              {# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> #}
              {# <div id="chart" class="chart"></div> #}

          </div>
        </div>


    </div>

    <div class ="row">
      <div class="card text-white bg-info mb-3" style="max-width: 50%;">
        <div class="card-header">Active Vote Distribution - Count: {{ votes.shape[0] }}</div>
        <div class="card-body">
            {# <h4 class="card-title">{{votes.iloc[0]['known_as']}}</h4> #}

            {# <h4 class="card-title">Current Votes : {{ votes.shape[0] }}</h4> #}
