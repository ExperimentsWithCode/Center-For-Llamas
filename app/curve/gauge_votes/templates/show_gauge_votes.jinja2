{% block content %}
  {% include "navigation.jinja2" %}

    <div class="row">
      <h1>{{ title }}</h1>
    </div>
    <div class="row">

        <div class="card text-white  bg-info mb-3", style="max-width: 50%;" >
          <div class="card-header">Address</div>
          <div class="card-body">
              <h4 class="card-title">{{user}}</h4>
              {# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> #}
              {# <div id="chart" class="chart"></div> #}

          </div>
        </div>


        <div class="card bg-warning mb-3", style="max-width: 50%;" >
          <div class="card-header">Known As</div>
          <div class="card-body">
              <h4 class="card-title">{{votes.iloc[0]['known_as']}}</h4>

              {# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> #}
              {# <div id="chart" class="chart"></div> #}

          </div>
        </div>


    </div>

    <div class ="row">
        <div class="card text-white bg-primary mb-3" >
          <div class="card-header">Currently Active Votes : {{ votes.shape[0] }}</div>
          <div class="card-body">
              {# <h4 class="card-title">{{votes.iloc[0]['known_as']}}</h4> #}

              {# <h4 class="card-title">Current Votes : {{ votes.shape[0] }}</h4> #}
              {# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> #}
              <div id="chart" class="chart"></div>

          </div>
        </div>
    </div>
    <div class="row">

        <div id="chart" class="chart"></div>

    </div>
    <div class="row">

        <h4 class="text-primary">Currently Active Votes</h4>

        <div id="vote_table"></div>

    </div>
    <div class="row">

        <h4 class="text-secondary">Currently Inactive Votes</h4>

        <div id="inactive_vote_table"></div>

    </div>





<script src='https://cdn.plot.ly/plotly-latest.min.js'></script>
<script type='text/javascript'>
  var graphs = {{graphJSON | safe}};
  Plotly.plot('chart',graphs,{});
</script>



<script type='text/javascript'>
      new gridjs.Grid({
        columns: [
          { id: 'period', name: 'Period' },
          { id: 'known_as', name: 'Known As' },
          { id: 'user', name: 'User' },
          { id: 'symbol', name: 'Symbol' },
          { id: 'weight', name: 'Weight' },
          { id: 'gauge_addr', name: 'Gauge Address',
            formatter: (_, row) => gridjs.html(
              `<a href=${row.cells[7].data}>${row.cells[5].data}</a>`
            )
          
          },
          { id: 'time', name: 'Timestamp' },
          { id: '_', name: '_', 
            formatter: (_, row) => gridjs.html(``)

          },
        ],
        data: [
          {% for index, row in votes.iterrows() %}
            {
              'period': '{{ row['period'] }}',
              'known_as': '{{ row['known_as'] }}',
              'user': '{{ row['user'] }}',
              'symbol': '{{ row['symbol'] }}',
              'weight': '{{ row['weight'] }}',
              'gauge_addr': '{{ row['gauge_addr'] }}',
              'time': '{{ row['time'] }}',
              '_': `{{ url_for('gauge_rounds_bp.show', gauge_addr = row['gauge_addr']) }}`

            },
          {% endfor %}
        ],
        search: true,
        sort: true,
        pagination: {
          limit: 50,
          summary: true
        },
        className: {
          {# td: 'my-td-class', #}
          th: 'table-primary',
          table: 'table table-hover' 
        }
      }).render(document.getElementById('vote_table'));
</script>


