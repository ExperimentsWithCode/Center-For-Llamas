            <div id="chart" class="chart"></div>

        </div>
      </div>

      <div class="card text-white bg-primary mb-3" style="max-width: 50%;" >
        <div class="card-header">Active Votes</div>
        <div class="card-body">
            {# <h4 class="card-title">{{votes.iloc[0]['known_as']}}</h4> #}

            {# <h4 class="card-title">Current Votes : {{ votes.shape[0] }}</h4> #}
            {# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> #}
            <div id="chart2" class="chart2"></div>

        </div>
      </div>

    </div>

    <div class ="row">
        <div class="card text-white bg-secondary mb-3" >
          <div class="card-header">All Votes Placed By Voter</div>
          <div class="card-body">
              {# <h4 class="card-title">{{votes.iloc[0]['known_as']}}</h4> #}

