<script type='text/javascript'>
      new gridjs.Grid({
        columns: [
            { id: 'date', name: 'date' },
            { id: 'pool_name', name: 'Pool Name' },
            { id: 'liquidity', name: 'Liquidity' },
            { id: 'liquidity_native', name: 'Liquidity Native' },
            { id: 'tradeable_assets', name: 'Tradeable Assets' },

            { id: 'gauge_address', name: 'Gauge Address' },
            { id: 'symbol', name: 'Symbol' },
            { id: 'percent', name: 'Percent' },
            { id: 'liquidity_vs_percent', name: 'Liquidity/Percent' },
            { id: 'pool_address', name: 'Pool Address' },

          { id: 'actions', 
            name: 'Actions',
            formatter: (_, row) => gridjs.html(`<a href='show/${row.cells[3].data}'>More</a>`)
          },
        ],
        data: [
          {% for index, row in df_processed_liquidity.iterrows() %}
            {
                'date': '{{ row['date'] }}',
                'pool_name': '{{ row['pool_name'] }}',

                'liquidity': '{{ row['liquidity'] }}',
                'liquidity_native': '{{ row['liquidity_native'] }}',
                'tradeable_assets': '{{ row['tradeable_assets'] }}',

                'gauge_address': '{{ row['gauge_address'] }}',
                'symbol': '{{ row['symbol'] }}',
                'percent': '{{ row['percent'] }}',
                'liquidity_vs_percent': '{{ row['liquidity_vs_percent'] }}',
                'pool_address': '{{ row['pool_address'] }}',

              'actions': null

            },
          {% endfor %}
        ],
        search: true,
        sort: true,
        pagination: {
          limit: 50,
          summary: true
        },
        className: {
          {# td: 'my-td-class', #}
          th: 'table-primary',
          table: 'table table-hover' 
        }
      }).render(document.getElementById('liquidity_table'));
</script>

