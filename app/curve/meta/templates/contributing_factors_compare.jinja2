                  <td>{{ error }}</td>
                  </tr>
                  {% endfor %}
                {% endif %}
                <tr>
                <th scope="row">{{ form.compare_back.label }}</th>
                <td>{{ form.compare_back(placeholder=16) }}</td>
                </tr>
                {% if form.compare_back.errors %}
                  {% for error in form.compare_back.errors %}
                  <tr class="errors">
                  <th scope="row text-danger"> Error ^ </th>
                  <td>{{ error }}</td>
                  </tr>
                  {% endfor %}
                {% endif %}
            </tbody>
            </table>

            <div class="submit-button" >
                {{ form.submit }}
            </div>

        </form>
