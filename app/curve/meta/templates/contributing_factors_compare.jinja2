        <div class="card bg-warning text-infomb-3" >
          <div class="card-body">

          <form method="POST" action="{{ url_for('curve_meta_bp.contributing_factors_compare') }}">
            {{ form.csrf_token }}
            <h3 class="card-title">Select Parameters: </h3>
            <table class="table table-hover">
            <tbody>
                <tr>
                <th scope="row"> {{ form.target_gauges.label }}</th>
                <td >{{ form.target_gauges(placeholder='0x90efd41e75360ffc7fd1d3c5fc0e4f43e8bcd9bc', cols="42", rows="5") }}</td>
                </tr>
                {% if form.target_gauges.errors %}
