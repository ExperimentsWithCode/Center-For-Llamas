    <div class="row">
      <h1>{{ title }}</h1>
    </div>

    <div class="row">

    <div class = "col-sm">
        <div class="card border-info mb-3" >
          <div class="card-header">Total CRV Locked:  </div>
          <div class="card-body">
            <h4 class="card-title text-info">{{  "{:,.2f}".format(total_locked) }}</h4>
